{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020", /* Set the JavaScript language version for emitted JavaScript and include compatible library declarations. */

    /* Modules */
    "module": "ESNext", /* Specify what module code is generated. */
    "moduleResolution": "node", /* Use node resolution for modules */
    

    /* JavaScript Support */
    "allowJs": true, /* Allow JavaScript files to be a part of your program. */
    "checkJs": true, /* Enable error reporting in type-checked JavaScript files. */

    /* Interop Constraints */
    
    "allowSyntheticDefaultImports": true, /* Allow default imports from modules with no default export. */
    "forceConsistentCasingInFileNames": true, /* Ensure that casing is correct in imports. */

    /* Type Checking */
    "strict": true, /* Enable all strict type-checking options */
    "noUnusedLocals": true, /* Report errors for unused local variables */
    "noUnusedParameters": true, /* Report errors for unused parameters */
    "noFallthroughCasesInSwitch": true, /* Prevent fall-through behavior in switch statements */
    "exactOptionalPropertyTypes": true, /* Interpret optional property types as written */
    "noImplicitReturns": true, /* Ensure every function explicitly returns a value or throws an error */
    "noImplicitOverride": true, /* Ensure method overrides are explicitly marked with the `override` modifier */
    "useUnknownInCatchVariables": true, /* Ensure 'unknown' is used for catch clause variables */

    /* Output Settings */
    "outDir": "./dist", /* Specify the directory for compiled files */
    "esModuleInterop": true, /* Allow default imports from CommonJS modules */
    "resolveJsonModule": true, /* Allow importing JSON files */
    "skipLibCheck": true, /* Skip type checking of declaration files */

    /* Additional Settings */
    "declaration": true, /* Generate corresponding '.d.ts' files */
    "sourceMap": true, /* Generate sourcemaps for debugging */
    "inlineSourceMap": false /* Don't inline sourcemaps, output to separate files */
  },
  "include": [
    "src/**/*",
    "client/src/**/*",
    "server/src/**/*"
  ], /* Include all TypeScript files in the src, client/src, and server/src folders */
  "exclude": [
    "client/dist", /* Exclude dist folder in client */
    "server/dist", /* Exclude dist folder in server */
    "node_modules" /* Exclude node_modules folder */
  ]
}
